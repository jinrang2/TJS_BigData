  FROM EMP E1
 INNER JOIN DEPT D1 ON E1.DEPTNO = D1.DEPTNO
 INNER JOIN DEPT D2 ON D1.LOC = D2.LOC
 INNER JOIN EMP E2 ON D2.DEPTNO = E2.DEPTNO
 WHERE E1.ENAME = 'SCOTT'
   AND E2.ENAME <> 'SCOTT';

