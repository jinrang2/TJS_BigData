  FROM EMP E1, DEPT D1, DEPT D2, EMP E2
 WHERE E1.DEPTNO = D1.DEPTNO
   AND D1.LOC = D2.LOC
   AND D2.DEPTNO = E2.DEPTNO
   AND E1.ENAME = 'SCOTT'
   AND E2.ENAME <> 'SCOTT'
 ORDER BY 1;

